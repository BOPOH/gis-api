<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">
    <description>The coding standard for gis-api.</description>
    <file>src</file>
    <exclude-pattern>*/Tests/*</exclude-pattern>

    <arg name="report" value="checkstyle"/>
    <arg name="standard" value="PSR2"/>
    <arg value="np"/>
</ruleset>
